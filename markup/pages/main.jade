doctype html
html(class="no-js", lang="ru")

    include _mixin
    include ../components/head/head
    include ../components/header/header
    include ../components/footer/footer
    include ../components/popup/popup

    head
        //- start  block head
        block head
        - if(headData)
            +head(headData)
        - else
            +head(head.defaults)
        //- end  block head
    body.page
        |%=symbols=%

        .page__wrapper
            +header(index)
            -if(!breadcrumb)
                .breadcrumbBlock
                    .container
                        ul.breadcrumb.not-styleLink
                            li: a(href="#"): span Главная
                            - if(headData)
                                li: span=headData.title

                        - if(headData)
                            h1.breadcrumbBlock__title=headData.title
                        - else
                            h1.breadcrumbBlock__title= head.defaults.title
            //- Include your components here
            // start block content
            section.page__wrapper-page
                block content
            // end block content

            .page__buffer
        .page__footer
            +footer()

        +popup()
        script(src='%=static=%js/separate-js/svg4everybody.min.js')
        script svg4everybody();

        script(src='%=static=%js/separate-js/jquery.magnific-popup.min.js')
        //- start block script
        block script
        //- end block script
        //- Main scripts. You can replace it, but I recommend you to leave it here
        script(src='%=static=%js/main%=hash=%%=min=%.js')





